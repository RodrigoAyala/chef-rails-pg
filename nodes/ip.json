{
   "run_list":[
      "recipe[selinux::permissive]",
      "recipe[build-essential]",
      "recipe[postgresql]",
      "recipe[database]",
      "recipe[database::postgresql]",
      "recipe[postgresql::server_redhat]",
      "recipe[postgresql::server]",
      "recipe[main]",
      "recipe[nginx]",
      "recipe[rvm::system_install]"
   ],
   "build_essential":{
      "compiletime":true
   },
   "postgresql":{
      "user":{
         "username":"your_new_username",
         "password":"your_secret_password"
      },
      "password":{
         "postgres":"random_password_for_postgres_user"
      },
      "config":{
         "listen_addresses":"localhost"
      },
      "pg_hba":[
         {
            "type":"local",
            "db":"all",
            "user":"all",
            "addr":null,
            "method":"trust"
         },
         {
            "type":"host",
            "db":"all",
            "user":"all",
            "addr":"127.0.0.1/32",
            "method":"password"
         },
         {
            "type":"host",
            "db":"all",
            "user":"all",
            "addr":"::1/128",
            "method":"password"
         }
      ]
   }
}
